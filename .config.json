{
    "env": {
        "isServer": false,
        "mode": "dev"
    },

    "build": {
        "system": true,
        "app": true,
        "web": true
    },

    "source": {
        "system": [
            "gears/"
        ],
        "app": [
            "app/modules/"
        ],
        "web": [
            "web/modules/"
        ],
        "exclude": [
            "assets/**",
            "libs/**",
            "tests/**"
        ],
        "resolve": {
            "system+": "gears/",
            "app+": "app/modules/",
            "web+": "web/modules/"
        }
    },

    "catalog": {
        "referenceName": "injectionPath"
    },

    "weaving": {

    },

    "settings": {
        "System": {
            "bootwares": [
                "system.Server | system.Client",
                "app.main | web.main"
            ]
        }
    }
}