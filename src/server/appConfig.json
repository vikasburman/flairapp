{
    "flair.app": {
        "load": [
            "./app/preamble.js",
            "flair.boot.NodeEnv",
            "flair.boot.Middlewares",
            "flair.boot.ResHeaders",
            "flair.boot.DIContainer",
            "flair.boot.Router"
        ],
        "envVars": [
            "./private/.env"
        ],
        "mounts": {
            "main": "/"
        },
        "main-appSettings": [
            { "name": "case sensitive routing", "value": false },
            { "name": "strict routing", "value": false }
        ],
        "main-middlewares": [
            { "name": "compression", "func": "", "args": [] }
        ],    
        "main-resHeaders": [
            { "name": "X-Powered-By", "value": "flairApp" }
        ],
        "http": {
            "enable": true,
            "port": 8080,
            "timeout": -1
        },
        "https": {
            "enable": true,
            "port": 8443,
            "timeout": -1,
            "privateKey": "./private/key.pem",
            "publicCert": "./private/cert.pem"
        }        
    },
    "worker:flair.app": {
        "load": [
            "./app/preamble.js",
            "flair.boot.DIContainer"
        ]
    }
}