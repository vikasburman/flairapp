{
    "flair.app": {
        "app": "myapp.main.App",

        "boot": {
            "files": [
            ],
            "preambles": [
                "./app/preamble.js"
            ],            
            "bootwares": [
                "flair.boot.NodeEnv",
                "flair.boot.Middlewares",
                "flair.boot.ResHeaders",
                "flair.boot.DIContainer",
                "flair.boot.ServerRouter"
            ]
        },

        "di": {
            "container": {
            }
        },

        "server": {
            "express": {
                "server-http": {
                    "enable": true,
                    "port": 8080,
                    "timeout": -1
                },
                "server-https": {
                    "enable": true,
                    "port": 8443,
                    "timeout": -1,
                    "privateKey": "./private/key.pem",
                    "publicCert": "./private/cert.pem"
                }
            },
    
            "envVars": {
                "vars": [
                    "./private/.env"
                ]
            },
    
            "routing": {
                "mounts": {
                    "main": "/"
                },
                "main-settings": [
                    { "name": "case sensitive routing", "value": false },
                    { "name": "strict routing", "value": false }
                ],
                "main-middlewares": [
                    { "name": "express", "func": "static", "args": ["www"] }
                ],  
                "main-interceptors": [
                ],          
                "main-resHeaders": [
                    { "name": "X-Powered-By", "value": "flairApp" }
                ]          
            }
        }   
    },
    "worker:flair.app": {
        "boot": {
            "files": [
            ],
            "preambles": [
                "./app/preamble.js"
            ],            
            "bootwares": [
                "flair.boot.DIContainer"
            ]
        }
    }
}