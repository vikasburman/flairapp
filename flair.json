{
    "build": {
        "custom": true,
        "customConfig": {
            "build": [
                { "profile": "server" },
                { "profile": "client" }
            ],
            "profiles": {
                "server": {
                    "dest": "/",
                    "skipMinify": true,
                    "build": [
                        "app",
                        "features"
                    ],
                    "plugins": ["copy_files", "node_modules", "write_flags"],
                    "copy": [
                        "private",
                        "appConfig.json",
                        "~/node_modules/flairjs-fabric/flair.server/main.js >> ./main.js"
                    ],
                    "flags": {
                        "dev": {
                            "FLAIR_SYMBOLS": "DEV,DEBUG"
                        },
                        "prod": {
                            "FLAIR_SYMBOLS": "PROD"
                        }
                    }
                },
                "client": {
                    "root": "www",
                    "dest": "@server",
                    "omitRoot": true,
                    "build": [
                        "app",
                        "features"
                    ],
                    "plugins": ["copy_files", "web_modules", "minify_files", "write_flags"],
                    "copy": [
                        "assets",
                        "favicon.png",
                        "webConfig.json",
                        "~/node_modules/flairjs-fabric/flair.client/index.html >> ./index.html",
                        "~/node_modules/flairjs-fabric/flair.client/index.js >> ./index.js"
                    ],
                    "modules": [
                        "flairjs",
                        "flairjs-fabric",
                        "requirejs",
                        "vue/dist",
                        "showdown/dist"
                    ],
                    "minify": [
                        "modules/requirejs/require.js"
                    ],
                    "flags": {
                        "dev": {
                            "FLAIR_SYMBOLS": "DEV,DEBUG"
                        },
                        "prod": {
                            "FLAIR_SYMBOLS": "PROD"
                        }
                    }
                }
            }
        }   
    },
    
    "test": {
        "jasmine": true,
        "jasmineConfig": {
            "stopOnSpecFailure": true
        }
    }
}