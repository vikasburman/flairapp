{
    "name": "yourapp",
    "title": "yourapp name",
    "description": "yourapp description",
    "copyright": "yourapp copyright",
    "version": "0.10.9",
    "author": "yourapp author <yourapp@yourhost.domain>",
    "keywords": [
        "flairjs",
        "javascript",
        "yourapp keyword1",
        "yourapp keyword2"
    ],
    "engines": {
        "node": "10"
    },
    "main": "main.js",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "yourapp giturl"
    },
    "scripts": {
        "build": "flair build --options ./config/build/options.json",
        "build-full": "flair build --options ./config/build/options.json --full",
        "build-quick": "flair build --options ./config/build/options.json --quick",
        "build-dev": "flair build --options ./config/build/options.json --flag dev",
        "build-dev-full": "flair build --options ./config/build/options.json --full --flag dev",
        "build-dev-quick": "flair build --options ./config/build/options.json --quick --flag dev",
        "build-prod": "flair build --options ./config/build/options.json --flag prod",
        "build-prod-full": "flair build --options ./config/build/options.json --full --flag prod",
        "build-prod-quick": "flair build --options ./config/build/options.json --quick --flag prod",
        "flag": "flair flag --options ./config/build/options.json",
        "test": "flair test --options ./config/test/options.json",
        "test-client": "flair test --options ./config/test/options.json --client",
        "serve": "nodemon --watch ./src --delay 5 --ext js,css,html,json,png,jpg,gif,xml --exec 'yarn build-quick && cd ./dist && node --inspect main.js'",
        "deploy": "cd ./dist && echo '** define deploy command **'",
        "start": "cd ./dist && pm2 start main.js",
        "stop": "pm2 stop main",
        "refresh": "yarn remove flairjs-cli && yarn remove flairjs && yarn remove flairjs-fabric && yarn remove flairjs-fabric-defaults && yarn add flairjs-cli --dev && yarn add flairjs && yarn add flairjs-fabric && yarn add flairjs-fabric-defaults"
    },
    "devDependencies": {
        "flairjs-cli": "^0.55.97",
        "nodemon": "^1.19.1"
    },
    "dependencies": {
        "flairjs": "^0.56.1",
        "flairjs-fabric": "^0.56.23",
        "flairjs-fabric-defaults": "^0.55.80",
        "pm2": "^3.4.0"
    }
}