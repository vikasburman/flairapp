    "copyright": "(c) 2017-2019 Vikas Burman",
    "version": "0.1.32",
    "author": "Vikas Burman <vikasburman@gmail.com>",
    "keywords": [
        "javascript",
        "oops",
        "js",
        "object oriented",
        "es6",
        "es5",
        "es7"
    ],
    "engines": {
        "node": ">=11.0.0"
    },
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/vikasburman/flairapp.git"
    },
    "main": "./app.min.js",
    "scripts": {
        "build": "gulp build --options ./config/build.json",
        "build-full": "gulp build --full --options ./config/build.json",
        "test": "gulp test --TEST --options ./config/test.json",
        "test-client": "gulp test --TEST --client --options ./config/test.json",
        "start": "http-server ./dist/app/ &",
        "poststart": "open http://127.0.0.1:8282/ &",
        "stop": "pkill -f http-server",
        "postinstall": "gulp flairjs"
    },
    "devDependencies": {
        "clean-css": "^4.2.1",
        "copy-dir": "^0.4.0",
        "del": "^4.0.0",
