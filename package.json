        "fs-extra": "^7.0.1",
        "gulp": "^4.0.0",
        "html-minifier": "^3.5.21",
        "htmllint": "^0.7.3",
        "http-server": "^0.11.1",
        "jasmine": "^3.3.1",
        "minimist": "^1.2.0",
        "open": "^0.0.5",
        "recursive-readdir-sync": "^1.0.6",
        "stylelint": "^9.10.1",
        "uglify-es": "^3.3.9"
