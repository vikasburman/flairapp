{
    "source": {
        "sys": "gears/modules/",
        "app": "app/modules/",
        "api": "api/modules/",
        "web": "web/modules/",
        "www": {
            "sys": "gears/web/",
            "web": "web/"
        },
        "exclude": [
            "assets/**",
            "libs/**",
            "tests/**"
        ]
    },

    "uglify": {
        "js": {
            "mangle": false,
            "preserveComments": "license",
            "output": {
            },
            "compress": {
                "dead_code": true,
                "drop_debugger": true,
                "global_defs": {
                    "use": true
                }
            }
        }
    },

    "jasmine": {
        "browser": {
            "specRunner": {
                "console": true
            },
            "headless": {
                "port": 8080,
                "catch": true,
                "random": false,
                "throwFailures": true
            }
        },
        "node": {
            "verbose": true,
            "includeStackTrace": true,
            "timeout": 5000,
            "errorOnFail": true
        }
    },

    "catalog": {
        "Base": "sys.core.Base",
        "Module": "sys.core.Module",
        "Bootware": "sys.core.Bootware",
        "Bootstrapper": "sys.core.boot.Server | sys.core.boot.Client",
        "Main": "app.main | web.main"
    },

    "weaving": {

    },

    "settings": {
        "sys.boot": {
            "bootwares": [
            ]
        }
    }
}