{
    "plugins": [
        { "name": "node_modules", "settings": { "cmd": "yarn install --prod" } },
        { "name": "write_flags", "settings": { "defaultFlag": "dev" } }
    ],    
    "build": [
        { "profile": "server" },
        { "profile": "client" }
    ],
    "profiles": {
        "server": {
            "dest": "/",
            "skipMinify": true,
            "build": [
                "app",
                "features"
            ],
            "plugins": ["copy_files", "node_modules", "write_flags", "create_bundle"],
            "copy": [
                "private",
                "appConfig.json",
                "~/node_modules/flairjs-fabric/flair.server/main.js >> ./main.js"
            ],
            "flags": {
                "dev": {
                    "FLAIR_SYMBOLS": "DEV,DEBUG"
                },
                "prod": {
                    "FLAIR_SYMBOLS": "PROD"
                }
            },
            "bundles": [
                { 
                    "target": "./bundles/preambles/preamble.js", 
                    "files": [
                        "./app/preamble.js",
                        "./features/preamble.js"
                    ]
                }
            ]
        },
        "client": {
            "root": "www",
            "dest": "@server",
            "omitRoot": true,
            "build": [
                "app",
                "features"
            ],
            "plugins": ["copy_files", "web_modules", "minify_files", "write_flags", "create_bundle"],
            "copy": [
                "assets",
                "pages",
                "favicon.png",
                "webConfig.json",
                "~/node_modules/flairjs-fabric/flair.client/index.html >> ./index.html",
                "~/node_modules/flairjs-fabric/flair.client/index.js >> ./index.js"
            ],
            "modules": [
                "flairjs",
                "flairjs-fabric",
                "requirejs",
                "vue/dist",
                "showdown/dist"
            ],
            "minify": [
                "modules/requirejs/require.js"
            ],
            "flags": {
                "dev": {
                    "FLAIR_SYMBOLS": "DEV,DEBUG"
                },
                "prod": {
                    "FLAIR_SYMBOLS": "PROD"
                }
            },
            "bundles": [
                { 
                    "target": "./bundles/preambles/preamble.js", 
                    "files": [
                        "./app/preamble.js",
                        "./features/preamble.js"
                    ]
                }
            ]            
        }
    }
}