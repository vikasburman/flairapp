{
    "plugins": [
        { "name": "docker_image", "file": "docker_image.js", "settings": { "cmd": "yarn install --prod" } },
        { "name": "node_modules", "file": "node_modules.js", "settings": { "cmd": "yarn install --prod" } },
        { "name": "web_modules", "file": "web_modules.js" },
        { "name": "copy_files", "file": "copy_files.js" },
        { "name": "minify_files", "file": "minify_files.js" }
    ],      
    "build": [
        { "profile": "server", "plugins": ["copy_files", "docker_image"] },
        { "profile": "client", "plugins": ["copy_files", "web_modules", "minify_files", "docker_image"] }
    ],
    "profiles": {
        "server": {
            "root": "server",
            "skipMinify": true,
            "build": [
                "app",
                "api"
            ],
            "copy": [
                "appConfig.json",
                "main.js",
                "private"
            ]
        },
        "client": {
            "root": "www",
            "build": [
                "app"
            ],
            "copy": [
                "assets",
                "favicon.png",
                "webConfig.json",
                "index.html",
                "index.js"
            ],
            "modules": [
                "flairjs",
                "requirejs",
                "vue/dist"
            ],
            "minify": [
                "modules/requirejs/require.js"
            ]
        }
    }
}