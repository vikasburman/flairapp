{
    "build": [
        { "profile": "server" },
        { "profile": "client" }
    ],
    "profiles": {
        "server": {
            "root": "server",
            "dest": "/",
            "skipMinify": true,
            "copy": [
                "appConfig.json",
                "main.js",
                "private"
            ],
            "build": [
                "app",
                "api"
            ]
        },
        "client": {
            "root": "www",
            "dest": "@server",
            "omitRoot": true,
            "modules": [
                "flairjs",
                "requirejs",
                "vue/dist"
            ],
            "copy": [
                "assets",
                "favicon.png",
                "webConfig.json",
                "index.html",
                "index.js"
            ],
            "minify": [
                "modules/requirejs/require.js"
            ],
            "build": [
                "app"
            ]
        }
    }
}