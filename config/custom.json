{
    "plugins": [
        { "name": "docker_image", "file": "docker_image.js", "settings": { "cmd": "" } },
        { "name": "node_modules", "file": "node_modules.js", "settings": { "cmd": "yarn install --prod" } },
        { "name": "web_modules", "file": "web_modules.js" },
        { "name": "copy_files", "file": "copy_files.js" },
        { "name": "minify_files", "file": "minify_files.js" },
        { "name": "write_env", "file": "write_env.js" }
    ],    
    "build": [
        { "profile": "server" },
        { "profile": "client" }
    ],
    "profiles": {
        "server": {
            "dest": "/",
            "skipMinify": true,
            "build": [
                "app",
                "features"
            ],
            "plugins": ["copy_files", "node_modules", "write_env"],
            "copy": [
                "private",
                "appConfig.json",
                "main.js"
            ],
            "env": {
                "type": "server",
                "vars": {
                    "FLAIR_SYMBOLS": "DEV,DEBUG"
                }
            }            
        },
        "client": {
            "root": "www",
            "dest": "@server",
            "omitRoot": true,
            "build": [
                "app",
                "features"
            ],
            "plugins": ["copy_files", "web_modules", "minify_files", "write_env"],
            "copy": [
                "assets",
                "favicon.png",
                "webConfig.json",
                "index.html",
                "index.js"
            ],
            "modules": [
                "flairjs",
                "flairjs-fabric",
                "requirejs",
                "vue/dist"
            ],
            "minify": [
                "modules/requirejs/require.js"
            ],
            "env": {
                "type": "client",
                "vars": {
                    "FLAIR_SYMBOLS": "DEV,DEBUG"
                }
            }
        }
    }
}