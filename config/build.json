{
    "engine": "flairjs/flair.cli.js",
    "package": "./package.json",

    "dest": "./dist",
    "src": "./src",

    "customBuild": true,
    "customBuildConfig": "./config/custom.json",

    "mainAssembly": "",
    
    "fullBuild": false,
    "clean": true,
    "skipBumpVersion": false,
    "suppressLogging": false,

    "lint": true,
    "lintConfig": "./config/lint.json",
    "lintTypes": ["js", "css", "html"],

    "minify": true,
    "minifyConfig": "./config/minify.json",
    "minifyTypes": ["js", "css", "html"],
    "generateJSSourceMap": false,

    "gzip": false,
    "gzipConfig": "./config/gzip.json",
    "gzipTypes": ["js", "css", "html", "txt", "xml", "md", "json", "svg", "jpg", "jpeg", "gif", "png"],

    "lintAssets": false,
    "minifyAssets": false,
    "gzipAssets": false,
    
    "lintResources": false,
    "minifyResources": false,
    "utf8EncodeResourceTypes": ["txt", "xml", "js", "md", "json", "css", "html", "svg"],

    "depsConfig": "./config/deps.json",
    "preBuildDeps": true,
    "postBuildDeps": true
}
